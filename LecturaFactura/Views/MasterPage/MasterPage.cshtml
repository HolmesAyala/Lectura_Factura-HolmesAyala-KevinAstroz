<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/png" href="~/Logo.svg" />

    <title>Gestor factura</title>

    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="~/Content/bootstrap4.min.css">
    <link href="~/Content/main.css" rel="stylesheet" />

    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/General/Constantes.js"></script>
    <script src="~/Scripts/General/RespuestasServer.js"></script>
    <script src="~/Scripts/General/ValidacionesCampos.js"></script>

</head>
<body>
    <header class="row align-items-center" style="background-color: rgb(255, 187, 46)">
        <div class="col-2">
            <img src="~/Images/Logo.svg" class="d-block p-2" style="width: 100px;" alt="Alternate Text" />
        </div>
        <div class="col-10">
            <h1 class="text-center font-weight-bold text-white p-4" style="font-family: helvetica;">Gestor factura</h1>
        </div>
    </header>

    <div class="navbar navbar-dark justify-content-start bg-dark">
        @Html.ActionLink("Subir factura", "SubirFactura", "SubirFactura", null, new { @class = "btn btn-dark" })
        @Html.ActionLink("Mis facturas", "VerFactura", "VerFactura", null, new { @class = "btn btn-dark" })
            @*@Html.ActionLink("Crear cuenta", "CrearCuenta", "CrearCuenta", null, new { @class = "btn btn-dark BTN_CrearCuenta" })
            @Html.ActionLink("Acceder", "Login", "Login", null, new { @class = "btn btn-dark BTN_Acceder" })*@
    </div>

    <div id="mensajes" class="d-inline" style="overflow:auto; right: 0; bottom: 0; position:fixed; max-height:25%;"></div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/MasterPage/MasterPage.js"></script>

</body>
</html>
